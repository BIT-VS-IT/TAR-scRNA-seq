# Get counts matrix for HMM-annotated features
rule extract_HMM_expression_withDir:
	input:
		BAM = '{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bam'
	output:
		COUNTS='{DATADIR}/{sample}_cellranger_count/TAR/TAR_expression_matrix_withDir.txt.gz',
		SUMMARY='{DATADIR}/{sample}_cellranger_count/TAR/TAR_counts_summary.txt'
	params:
		BARCODES = '{DATADIR}/{sample}_cellranger_count/outs/filtered_feature_bc_matrix/barcodes.tsv.gz',
		TMPDIR = TMPDIR
	shell:
		"""
		{DROPSEQ}/DigitalExpression\
			I={input.BAM}\
			O={output.COUNTS}\
			TMP_DIR={params.TMPDIR}\
			SUMMARY={output.SUMMARY}\
			CELL_BARCODE_TAG=CB\
			MOLECULAR_BARCODE_TAG=UB\
			GENE_NAME_TAG=GN\
			GENE_STRAND_TAG=GS\
			CELL_BC_FILE={params.BARCODES}
		"""

#TODO - change format of saved matrix ^^^

rule extract_HMM_expression_noDir:
	input:
		BAM='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_noDir.bam'
		# BARCODES = '{DATADIR}/{sample}_cellranger_count/TAR/cellList.txt'
	output: '{DATADIR}/{sample}_cellranger_count/TAR/TAR_expression_matrix_noDir.txt.gz'
	params:
		sample = '{sample}',
		DATADIR = '{DATADIR}',
		BARCODES = '{DATADIR}/{sample}_cellranger_count/outs/filtered_feature_bc_matrix/barcodes.tsv.gz'
	shell:
		"""
		{DROPSEQ}/DigitalExpression\
			I={input.BAM}\
			O={output}\
			SUMMARY={params.DATADIR}/{params.sample}_cellranger_count/TAR/TAR_noDir_dge.summary.txt \
			CELL_BARCODE_TAG=CB\
			CELL_BC_FILE={params.BARCODES}
		"""

#########################################################
# Diff. TAR expression & BLAST
#########################################################

# generate differentially expressed genes and uTARs
rule getDiffFeatures:
	input:
		hmmFile='{DATADIR}/{sample}_cellranger_count/TAR/TAR_expression_matrix_withDir.txt.gz'
	output:
		'{DATADIR}/{sample}_cellranger_count/TAR/diffFeatures.txt'
	params:
		geneFile='{DATADIR}/{sample}_cellranger_count/outs/filtered_feature_bc_matrix'
	shell:
		"""
		Rscript scripts/analyzeExpressionMat.R {params.geneFile} {input.hmmFile}
		"""

# from diff uTARs, extract fasta region to blast
rule getDiffRegionsToBlast:
	input:
		diffFeatures='{DATADIR}/{sample}_cellranger_count/TAR/diffFeatures.txt',
		bamFile='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bam',
		bamIndex='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bai'
	output:
		fastaRegions='{DATADIR}/{sample}_cellranger_count/TAR/TAR_seqsToBlast.txt',
		uTARDiffFeatures='{DATADIR}/{sample}_cellranger_count/TAR/TAR_diffuTARFeatures.txt'
	shell:
		"""
		Rscript scripts/getFastasForBlast.R {input.diffFeatures} {input.bamFile}
		"""

# extract diff uTAR fastas
rule getDiffSeqsToBlastFa:
	input:
		fastaRegions='{DATADIR}/{sample}_cellranger_count/TAR/TAR_seqsToBlast.txt'
	output:
		TARfasta='{DATADIR}/{sample}_cellranger_count/TAR/TAR_seqsToBlast.fa'
	params:
		fastaFile=CR_REF+'/fasta/genome.fa',
		fastaIndex=CR_REF+'/fasta/genome.fa'+'.dict'
	shell:
		"""
		samtools faidx -r {input.fastaRegions} {params.fastaFile} > {output}
		"""

# run blast on fastas
rule ruleBlast:
	input:
		TARfasta='{DATADIR}/{sample}_cellranger_count/TAR/TAR_seqsToBlast.fa'
	output:
		'{DATADIR}/{sample}_cellranger_count/TAR/blastResults.txt'
	threads: CORES
	params:
		blastDB=config['BLASTDB']
	shell:
		"""
		blastn -db {params.blastDB}/nt -query {input.TARfasta} -out {output} -outfmt '6 qseqid sseqid stitle pident length mismatch gapopen qstart qend sstart send evalue bitscore' -max_target_seqs 5 -num_threads {CORES}
		"""

# label uTARs based on best blast results
rule labelDiffuTARs:
	input:
		diffFeatures='{DATADIR}/{sample}_cellranger_count/TAR/TAR_diffuTARFeatures.txt',
		blastResult='{DATADIR}/{sample}_cellranger_count/TAR/blastResults.txt'
	output:
		uTARSummary='{DATADIR}/{sample}_cellranger_count/TAR/TAR_diffuTARFeaturesLabeled.txt'
	shell:
		"""
		Rscript scripts/examineBlastResults.R {input.diffFeatures} {input.blastResult}
		"""

rule getMatsSteps:
	input:
		COUNTS='{DATADIR}/{sample}_cellranger_count/TAR/TAR_expression_matrix_withDir.txt.gz',
		# hmm2='{path}/{sample}_TAR_expression_matrix_noDir.txt.gz',
		bamFile='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bam',
		bamIndex='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bai'
	output: '{DATADIR}/{sample}_cellranger_count/TAR/getMats.txt'
	shell:
		"""echo "Expression matrices ready" > {output}"""
