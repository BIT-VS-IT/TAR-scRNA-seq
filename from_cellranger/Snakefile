# Run HMM
rule calcHMMbed:
	input: '{DATADIR}/{sample}_cellranger_count/outs/possorted_genome_bam.bam' #need absolute path
	output: temp('{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz')
	threads: CORES
	shell:
		"""
		bash scripts/SingleCellHMM_MW.bash {input} {CORES} {MERGEBP} {THRESH} {wildcards.DATADIR}/{wildcards.sample}_cellranger_count/TAR
		"""
# Generate annotations from HMM in refFlat format
#		Returns annotations with and without considering strandedness/direction
rule calcHMMrefFlat:
	input:
		BEDGZ='{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz',
		REFFLAT=CR_REF+"/genes/genes.refFlat"
	output:
		# NODIR = '{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz.noDir.genes.refFlat',
		WITHDIR ='{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz.withDir.genes.refFlat'
	shell:
		"""
		Rscript scripts/generate_refFlat_script_both.R {input.REFFLAT} {input.BEDGZ}
		"""

# Convert stranded annotations to gtf format
rule HMM_refFlat_to_gtf_WITHDIR:
	input:
		WITHDIR ='{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz.withDir.genes.refFlat'
	output:
		WITHDIR ='{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz.withDir.genes.refFlat.gtf'
	shell:
		"""
		Rscript scripts/convertRefFlatToGTF.R {input.WITHDIR}
		"""

# Label .bam file with each HMM feature
rule stage3_withDir:
	input:
		TAR_GTF = '{DATADIR}/{sample}_cellranger_count/TAR/TAR_reads.bed.gz.withDir.genes.refFlat.gtf'
	output:
		OUTBAM='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bam', #TODO - temp()?
		bamIndex='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagged_withDir.bai',
		SUMMARY='{DATADIR}/{sample}_cellranger_count/TAR/TAR_tagging_summary.txt'
	params:
		MERGED = '{DATADIR}/{sample}_cellranger_count/outs/possorted_genome_bam.bam'
	threads: 1
	shell:
		"""
        {DROPSEQ}/TagReadWithGeneFunction\
			I={params.MERGED}\
            O={output.OUTBAM}\
			SUMMARY={output.SUMMARY}\
            ANNOTATIONS_FILE={input.TAR_GTF}\
			GENE_NAME_TAG=GN\
			GENE_STRAND_TAG=GS\
			USE_STRAND_INFO=true\
            MAX_RECORDS_IN_RAM=5000000\
			CREATE_INDEX=true
        """

