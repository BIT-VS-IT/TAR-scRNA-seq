########################################################################################################
# Extract expression for single species
########################################################################################################

# Remove any non-ACGT characters from cell barcodes list -
# rule cleanCellsList:
# 	input:	'{DATADIR}/{sample}_cellranger_count/outs/filtered_feature_bc_matrix/barcodes.tsv.gz'
